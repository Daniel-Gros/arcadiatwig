<h3>Laisser un avis</h3>
<div class="row">
	<div class="col-md-5 col-sm-12 my-3">
		{{ form_start(form) }}
		<div class="mb-3">
			{{ form_row(form.pseudo, {'attr': {'class': 'form-control'}}) }}
		</div>
		<div class="mb-3">
			<label class="form-label">Votre note :</label>
			{{ form_widget(form.note, {'attr': {'class': 'form-control'}}) }}
		</div>

	</div>
	<div class="col-md-7 col-sm-12 my-3">
		<div class="mb-3">
			{{ form_row(form.message, {'attr': {'class': 'form-control'}}) }}
		</div>
		{{ form_row(form.validation) }}
		{{ form_row(form.user_id) }}

		<button type="reset" class="btn button-erase">Effacer</button>
		<button type="submit" class="btn button">Envoyer</button>
	</div>
	{{ form_end(form) }}
</div>

