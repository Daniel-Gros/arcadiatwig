{% extends "base.html.twig" %}
{% block title %}Panneau d'administration
{% endblock %}
{% block body %}

	<div class="container">
		<h1 class="text-center">Panneau d'Administration d'Arcadia</h1>
		<h2 class="my-3">Gestion
		</h2>
		<div class="section gestion">
			<ul class="d-flex justify-content-between list-unstyled">
				{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a class="nav-link" href="{{ path('app_animal_crud_index') }}">Animal</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a class="nav-link" href="{{ path('app_habitat_crud_index') }}">Habitat</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_VETERINAIRE') %}
					<li>
						<a class="nav-link" href="{{ path('app_commentaire_habitat_crud_index') }}">Commentaire Habitat</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_VETERINAIRE') %}
					<li>
						<a class="nav-link" href="{{ path('app_compte_rendu_veterinaire_crud_index') }}">Compte Rendu Vétérinaire</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_EMPLOYEE') %}
					<li>
						<a class="nav-link" href="{{ path('app_service_crud_index') }}">Service</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_EMPLOYEE') %}
					<li>
						<a class="nav-link" href="{{ path('app_avis_crud_index') }}">Avis</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_ADMIN') %}
					<li>
						<a class="nav-link" href="{{ path('app_user_crud_index') }}">Personnel</a>
					</li>
				{% endif %}
			</ul>
		</div>


		<div class="section-stats">
			<h2>Statistiques</h2>
			<table class="table">
				<thead>
					<tr>
						<th>Statistique</th>
						<th>Valeur</th>
					</tr>
				</thead>
				<tbody>
					<tr>
						<td>Nombre d'animaux</td>
						<td>{{animalCount}}</td>
					</tr>
					<tr>
						<td>Nombre d'habitats</td>
						<td>{{habitatCount}}</td>
					</tr>
					<tr>
						<td>Nombre de commentaires habitat</td>
						<td>{{commentaireHabitatCount}}</td>
					</tr>
					<tr>
						<td>Nombre de comptes rendus vétérinaire</td>
						<td>{{compteRenduVeterinaireCount}}</td>
					</tr>
					<tr>
						<td>Nombre de services</td>
						<td>{{serviceCount}}</td>
					</tr>
					<tr>
						<td>Nombre d'avis</td>
						<td>{{avisCount}}</td>
					</tr>
				</tbody>
			</table>
		</div>


	</div>

{% endblock %}
