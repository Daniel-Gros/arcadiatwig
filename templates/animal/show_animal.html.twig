{% extends 'base.html.twig' %}

{% block title %}Animaux par habitat{% endblock %}

{% block body %}

<h1 class="text-center">Animaux class√©s par habitat</h1>

<div class="habitats-container">
    {% for habitat in habitats %}
        <div class="habitat-block">
            <h2>{{ habitat.name }}</h2>
            <ul>
                {% for animal in habitat.animals %}
                    <li>{{ animal.name }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</div>

{% endblock %}
