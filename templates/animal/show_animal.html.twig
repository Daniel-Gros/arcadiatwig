{% extends 'base.html.twig' %}

{% block title %}Animaux par habitat
{% endblock %}

{% block body %}

	<h1 class="text-center">Animaux class√©s par habitat</h1>

	<div class="row">
		{% for animal in animals %}
			<div class="col-md-4">
				<div class="card mb-4">
					<img src="{{ animal.image }}" class="card-img-top" alt="{{ animal.name }}">
					<div class="card-body">
						<h5 class="card-title">{{ animal.name }}</h5>
						<p class="card-text">{{ animal.description }}</p>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>
</div>

{% endblock %}
