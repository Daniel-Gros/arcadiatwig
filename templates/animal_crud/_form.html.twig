{{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}
<div class="container">
	<div class="row">
		{% for field in form %}
			{% if field.vars.block_prefixes[1] != 'submit' %}
				<div class="form-group">
					{{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(field, {'attr': {'class': 'form-control'}}) }}
					{{ form_errors(field) }}
				</div>
			{% endif %}
		{% endfor %}
		<div class="form-group">
			{{ form_widget(form.submit, {'attr': {'class': 'btn btn-dark'}}) }}
		</div>
	</div>
	<div class="text-center">
		<button type="submit" class="btn btn-dark">{{ button_label|default('Sauvegarder') }}</button>
	</div>
</div>
{{ form_end(form) }}
