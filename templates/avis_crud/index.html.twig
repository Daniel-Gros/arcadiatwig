{% extends 'base.html.twig' %}

{% block title %}Avis index{% endblock %}

{% block body %}
    <h1>Avis index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Pseudo</th>
                <th>Message</th>
                <th>Note</th>
                <th>Validation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for avi in avis %}
            <tr>
                <td>{{ avi.id }}</td>
                <td>{{ avi.pseudo }}</td>
                <td>{{ avi.message }}</td>
                <td>{{ avi.note }}</td>
                <td>{{ avi.validation ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_avis_crud_show', {'id': avi.id}) }}">show</a>
                    <a href="{{ path('app_avis_crud_edit', {'id': avi.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_avis_crud_new') }}">Create new</a>
{% endblock %}
