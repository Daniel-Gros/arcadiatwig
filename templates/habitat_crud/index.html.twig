{% extends 'base.html.twig' %}

{% block title %}Section Habitat{% endblock %}

{% block body %}
    <h1>Section Habitat</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for habitat in habitats %}
            <tr>
                <td>{{ habitat.id }}</td>
                <td>{{ habitat.name }}</td>
                <td>{{ habitat.description }}</td>
                <td>
                    <a href="{{ path('app_habitat_crud_show', {'id': habitat.id}) }}">voir</a>
                    <a href="{{ path('app_habitat_crud_edit', {'id': habitat.id}) }}">éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas d'enregistrements trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_habitat_crud_new') }}">Créer nouvel habitat</a>
{% endblock %}
