{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block body %}
    <h1>Service</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ service.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ service.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ service.description }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-dark" href="{{ path('app_service_crud_index') }}">Retour à la liste</a>

    <a class="btn btn-dark" href="{{ path('app_service_crud_edit', {'id': service.id}) }}">Éditer</a>

    {{ include('service_crud/_delete_form.html.twig') }}
{% endblock %}
