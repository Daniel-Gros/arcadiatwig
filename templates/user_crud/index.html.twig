{% extends 'base.html.twig' %}

{% block title %}Section Utilisateur{% endblock %}

{% block body %}
    <h1>Section Utilisateur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>N° d'identification (Id)</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles | join(', ')}}</td>
                <td>
                    <a href="{{ path('app_user_crud_show', {'id': user.id}) }}">Voir</a>
                    <a href="{{ path('app_user_crud_edit', {'id': user.id}) }}">Éditer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas d'enregistrements trouvés</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_user_crud_new') }}">Créer nouvel utilisateur</a>
{% endblock %}
